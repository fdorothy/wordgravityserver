extends layout

block content
  h3 Leaderboard
  table.table.table-striped
    thead
      tr
        th Name
        th Score
    tbody
      each leader, i in globalLeaderboard.leaders
        tr
          if leader.user
            td #{leader.user.name}
            td #{leader.score}
  h3 Daily Challenge Leaderboard
  p seed: #{dailyLeaderboard.seed}
  p rollover at: #{dailyRolloverTime}
  table.table.table-striped
    thead
      tr
        th Name
        th Score
    tbody
      each leader, i in dailyLeaderboard.leaders
        tr
          if leader.user
            td #{leader.user.name}
            td #{leader.score}
  